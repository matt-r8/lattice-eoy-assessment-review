{
  // ========================================
  // WORKSPACE ACCENT COLORS - "Yellow + Orange"
  // ========================================
  // Two-Color Theme System for Maximum Uniqueness
  //
  // PRIMARY ACCENT (Bright - for title bar, status bar, major elements)
  // Yellow: #fde047 (yellow-300)
  // Dark Yellow: #854d0e (yellow-900)
  //
  // SECONDARY ACCENT (Complementary - for borders, icons, subtle accents)
  // Dark Orange: #9a3412 (orange-900)
  // Bright Orange: #f97316 (orange-500)
  //
  // BACKGROUND TINT (Blend of both)
  // Sidebar: #2e1f1a (dark yellow-orange blend)
  //
  // ========================================
  // EXAMPLE COLOR PAIRINGS:
  // ========================================
  // Nature:
  //   Green + Brown: #22c55e, #78350f, #d97706
  //   Teal + Sage: #14b8a6, #365314, #84cc16
  //
  // Ocean:
  //   Blue + Teal: #3b82f6, #0f766e, #5eead4
  //   Cyan + Navy: #06b6d4, #1e3a8a, #93c5fd
  //
  // Fire:
  //   Red + Orange: #ef4444, #9a3412, #fdba74
  //   Orange + Yellow: #f97316, #854d0e, #fde047
  //
  // Royal:
  //   Purple + Blue: #a855f7, #1e40af, #93c5fd
  //   Magenta + Purple: #ec4899, #6b21a8, #d8b4fe
  //
  // Sunset:
  //   Pink + Orange: #ec4899, #9a3412, #fdba74
  //   Rose + Gold: #f43f5e, #854d0e, #fde047
  // ========================================

  "workbench.colorCustomizations": {
    // === ACCENT COLORS (Visible Identity Elements) ===

    // Title Bar (Top - PRIMARY accent)
    "titleBar.activeBackground": "#854d0e",
    "titleBar.activeForeground": "#fde047",
    "titleBar.inactiveBackground": "#1e1e1e",
    "titleBar.inactiveForeground": "#858585",
    "titleBar.border": "#f97316",

    // Status Bar (Bottom - PRIMARY accent)
    "statusBar.background": "#854d0e",
    "statusBar.foreground": "#fde047",
    "statusBar.border": "#f97316",
    "statusBar.noFolderBackground": "#854d0e",
    "statusBar.debuggingBackground": "#f97316",
    "statusBar.debuggingForeground": "#854d0e",

    // Activity Bar (Far Left - PRIMARY accent icons, SECONDARY border)
    "activityBar.background": "#1e1e1e",
    "activityBar.foreground": "#fde047",
    "activityBar.inactiveForeground": "#666666",
    "activityBar.border": "#f97316",
    "activityBarBadge.background": "#fde047",
    "activityBarBadge.foreground": "#000000",

    // Active Tab Border (SECONDARY accent)
    "tab.activeBorder": "#f97316",
    "tab.activeBorderTop": "#f97316",

    // Panel Title Border (SECONDARY accent)
    "panelTitle.activeBorder": "#f97316",

    // Sidebar Border (SECONDARY accent)
    "sideBar.border": "#f97316",

    // === DEFAULT DARK THEME (Functional Areas) ===
    // Editor - Keep standard dark theme for readability
    "editor.background": "#1e1e1e",
    "editor.foreground": "#d4d4d4",

    // Sidebar - Yellow-orange blend background
    "sideBar.background": "#2e1f1a",
    "sideBar.foreground": "#f97316",
    "sideBarSectionHeader.background": "#854d0e",
    "sideBarSectionHeader.foreground": "#fde047",

    // Tabs - Standard dark
    "tab.activeBackground": "#1e1e1e",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveBackground": "#2d2d2d",
    "tab.inactiveForeground": "#969696",
    "editorGroupHeader.tabsBackground": "#252526",

    // Panel (Terminal/Output) - SECONDARY borders, PRIMARY text
    "panel.background": "#1e1e1e",
    "panel.border": "#f97316",
    "panelTitle.activeForeground": "#fde047",
    "panelTitle.inactiveForeground": "#854d0e",
    "panelSectionHeader.background": "#854d0e",
    "panelSectionHeader.foreground": "#fde047",

    // Terminal - Standard dark
    "terminal.background": "#1e1e1e",
    "terminal.foreground": "#cccccc"
  }
}

